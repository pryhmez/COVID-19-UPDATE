<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diagnoses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiagnoseFragment">
 <LinearLayout
     android:id="@+id/nested"
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="20">
     <androidx.core.widget.NestedScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#f1f5f7">

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/recycler_view_fruits"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:clipToPadding="false"
             android:scrollbars="vertical"
             android:padding="5dp"

             />
     </androidx.core.widget.NestedScrollView>
 </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="#05E41414"
    android:layout_weight="2.3">
    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#159DBA"
        android:text="Check Result"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:elevation="@dimen/card_cover_height"
        android:padding="0dp"
        android:layout_margin="5dp"
        />
</LinearLayout>

</LinearLayout>



